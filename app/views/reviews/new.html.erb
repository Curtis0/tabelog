<%= render partial: 'layouts/header' %>

<h1>New Review</h1>

<%= form_for [@shop, @review] do |f| %>

<div class="form-group">
  <%= f.label :score %><br>
  <%= f.number_field :score, class: "form-control" %>
  <%# f.select :score, [ 1, 2, 3, 4, 5 ] %>
</div>

<div class="form-group">
  <%= f.label :body %><br>
  <%= f.text_area :body, class: "form-control" %>
</div>

<%= f.submit 'Post Review' %>

<% end %>
